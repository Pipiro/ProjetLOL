       $('#2013').removeClass('active');
       $('#2014').removeClass('active');
       $('#2015').removeClass('active');
       $('#'+season).toggleClass('active');
       if (season == 2013){season = 3;}
       //requête ajax, appel du fichier _returnNumberKeysAvailables.php
