       {
        type: "GET",
        url: "ajax/_returnStatsPlayerBySeason.php?idJoueur="+<?php echo $_GET['id']; ?>+"&season="+season,
        dataType : "html",
        //affichage de l'erreur en cas de problème
        error:function(msg, string)
        {
          alert( "Error !: " + string );
        },
        success:function(data)
        {
          //on met à jour la div contenu_stats avec les données reçus
          //on vide la div et on le cache
          $("#contenu_stats").empty().hide();
          //on affecte les resultats au div
          $("#contenu_stats").append(data);
          //on affiche les resultats avec la transition
          $('#contenu_stats').fadeIn(1000);
        }
       });
      }

